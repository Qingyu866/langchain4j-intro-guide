# OpenAI API Key
# 从 https://platform.openai.com/api-keys 获取
OPENAI_API_KEY=

# OpenAI 模型名称
# 可选值: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# 温度参数 (0.0 - 1.0)
# 较低的值使输出更确定性，较高的值使输出更随机
OPENAI_TEMPERATURE=0.7

# 最大响应 tokens
# 根据模型限制调整
OPENAI_MAX_TOKENS=2000

# 请求超时时间 (秒)
OPENAI_TIMEOUT=60

# 是否跳过集成测试
# true = 只运行单元测试（不需要 API Key）
# false = 运行所有测试（需要 API Key）
SKIP_INTEGRATION_TESTS=true

# 是否启用性能测试
# true = 运行性能测试
# false = 跳过性能测试
ENABLE_PERF_TESTS=false
